<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="12dp"
    android:paddingEnd="64dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:gravity="start">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/bubble_incoming"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/incomingmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/chat_bubble_max_width"
                android:text="Incoming message"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/bubble_incoming_on" />

            <TextView
                android:id="@+id/incomingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="10:24 AM"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@color/bubble_incoming_on_dim" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
